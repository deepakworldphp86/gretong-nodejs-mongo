<!-- tables -->
<link rel="stylesheet" type="text/css" href="/admin/css/table-style.css" />
<link rel="stylesheet" type="text/css" href="/admin/css/basictable.css" />
<script type="text/javascript" src="/admin/js/jquery.basictable.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
      $('#table').basictable();

      $('#table-breakpoint').basictable({
        breakpoint: 768
      });

      $('#table-swap-axis').basictable({
        swapAxis: true
      });

      $('#table-force-off').basictable({
        forceResponsive: false
      });

      $('#table-no-resize').basictable({
        noResize: true
      });

      $('#table-two-axis').basictable();

      $('#table-max-height').basictable({
        tableWrapper: true
      });
    });
</script>
<!-- //tables -->
                       <div class="main-grid">
			<div class="agile-grids">
                        <div class="bs-component mb40">
                         <a href="/admin/category/add/<%= id %>" class="btn btn-category btn-block" >Add Category</a>
                        </div>
				<!-- tables -->
			         <h3>Categories Listing</h3>
				  <table id="table-two-axis" class="two-axis">
					<thead>
					  <tr>
						<th>Name</th>
						<th>Category Code </th>
						<th>Content</th>
						<th>Image</th>
						<th>Edit</th>
						<th>Action</th>
					  </tr>
					</thead>
					<tbody>
                                        <% console.log(responce.length); %>
                                        <% for (var i = 0; i < responce.length; ++i) { %>
					  <tr>
						<td><a href="/admin/categories?id=<%= responce[i]._id %>"><%= responce[i].Name %><a/></td>
						<td><%= responce[i].Code %></td>
						<td><%= responce[i].categories_content %></td>
						<td>
                                                <% if(responce[i].categories_image) { %>
                                                <img id="myImg" src="/admin/uploads/<%= responce[i].categories_image %>" width="107" height="98">
                                                <% } %>
                                                </td>
						<td><a href="/admin/category/edit?id=<%= responce[i]._id %>">Edit</td>
						<td><a href="/admin/category/delete?id=<%= responce[i]._id %> & parent_id=<%= responce[i].parent_category %>">Delete</td>
					  </tr>
                                          <% } %>
					 </tbody>
				  </table>



				</div>
				<!-- //tables -->
        <%- paginationHtml %>
			</div>
		
