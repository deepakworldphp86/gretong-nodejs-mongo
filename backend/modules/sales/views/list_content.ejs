<!-- tables -->
<link rel="stylesheet" type="text/css" href="/admin/css/table-style.css" />
<link rel="stylesheet" type="text/css" href="/admin/css/basictable.css" />
<script type="text/javascript" src="/admin/js/jquery.basictable.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
      $('#table').basictable();

      $('#table-breakpoint').basictable({
        breakpoint: 768
      });

      $('#table-swap-axis').basictable({
        swapAxis: true
      });

      $('#table-force-off').basictable({
        forceResponsive: false
      });

      $('#table-no-resize').basictable({
        noResize: true
      });

      $('#table-two-axis').basictable();

      $('#table-max-height').basictable({
        tableWrapper: true
      });
    });
</script>
<!-- //tables -->
                       <div class="main-grid">
        <div class="agile-grids">
    
				<!-- tables -->
			         <h3>Orders Listing</h3>
				  <table id="table-two-axis" class="two-axis">
					<thead>
					  <tr>
						<th>Name</th>
						<th>Date </th>
            <th>Total</th>
						<th>Paid</th>
						<th>Delivered</th>
						<th>Order Details</th>
					  </tr>
					</thead>
					<tbody>
            <% for (var i = 0; i < orders.length; ++i) { %>
					  <tr>
						<td><%= orders[i].customers.firstname %> &nbsp; <%= orders[i].customers.lastname %></td>
						<td><%= orders[i].createdAt %></td>
						<td><%= orders[i].totalPrice %></td>
            <td><%= orders[i].totalPrice %></td>
            <td><%= orders[i].deliveredAt %></td>
            <td><a href="/admin/orders/details/<%= orders[i]._id %>">Order Details</td>
					  </tr>
              <% } %>
					 </tbody>
				  </table>



				</div>
				<!-- //tables -->
        <%- paginationHtml %>
			</div>
		
