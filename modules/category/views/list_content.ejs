<!-- tables -->
<link rel="stylesheet" type="text/css" href="/admin/css/table-style.css" />
<link rel="stylesheet" type="text/css" href="/admin/css/basictable.css" />
<script type="text/javascript" src="/admin/js/jquery.basictable.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
      $('#table').basictable();

      $('#table-breakpoint').basictable({
        breakpoint: 768
      });

      $('#table-swap-axis').basictable({
        swapAxis: true
      });

      $('#table-force-off').basictable({
        forceResponsive: false
      });

      $('#table-no-resize').basictable({
        noResize: true
      });

      $('#table-two-axis').basictable();

      $('#table-max-height').basictable({
        tableWrapper: true
      });
    });
</script>
<!-- //tables -->
                       <div class="main-grid">
        <div class="agile-grids">
        <div class="bs-component mb40">
          <a href="/admin/category/add/<%= id %>" class="btn btn-category btn-block" >Add Category</a>
        </div>
				<!-- tables -->
			         <h3>Categories Listing</h3>
				  <table id="table-two-axis" class="two-axis">
					<thead>
					  <tr>
						<th>Name</th>
						<th>Category Code </th>
						<th>Content</th>
						<th>Image</th>
            <th>View Child Category</th>
            <th>Add</th>
						<th>Edit</th>
						<th>Action</th>
					  </tr>
					</thead>
					<tbody>
            <% <!--console.log(responce.length);--> %>
            <% for (var i = 0; i < responce.length; ++i) { %>
					  <tr>
						<td><a href="/admin/category?id=<%= responce[i]._id %>"><%= responce[i].name %></a></td>
						<td><%= responce[i].code %></td>
						<td><%= responce[i].description %></td>
						<td>
              <% if(responce[i].categoryImage) { %>
              <img id="myImg" src="/admin/uploads/category_image/<%= responce[i].categoryImage %>" width="107" height="98">
              <% } %>
              </td>
            <td><a href="/admin/category/list/<%= responce[i].id %>/1">View Child Category</td>
            <td><a href="/admin/category/add/<%= responce[i].id %>">Add Child Category</td>
            <td><a href="/admin/category/edit/<%- responce[i].id %>">Edit</td>
            <td><a href="/admin/category/delete/<%= responce[i].id %>/<%= responce[i].parentId %>">Delete</td>
					  </tr>
              <% } %>
					 </tbody>
				  </table>



				</div>
				<!-- //tables -->
        <%- paginationHtml %>
			</div>
		
