<!-- tables -->
<link rel="stylesheet" type="text/css" href="/admin/css/table-style.css" />
<link rel="stylesheet" type="text/css" href="/admin/css/basictable.css" />
<script type="text/javascript" src="/admin/js/jquery.basictable.min.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
      $('#table').basictable();

      $('#table-breakpoint').basictable({
        breakpoint: 768
      });

      $('#table-swap-axis').basictable({
        swapAxis: true
      });

      $('#table-force-off').basictable({
        forceResponsive: false
      });

      $('#table-no-resize').basictable({
        noResize: true
      });

      $('#table-two-axis').basictable();

      $('#table-max-height').basictable({
        tableWrapper: true
      });
    });
</script>
<!-- //tables -->
                       <div class="main-grid">
        <div class="agile-grids">
        <div class="bs-component mb40">
          <a href="/admin/product/add" class="btn btn-category btn-block" >Add Product</a>
        </div>
				<!-- tables -->
			         <h3>Product Listing</h3>
				  <table id="table-two-axis" class="two-axis">
					<thead>
					  <tr>
						<th>Name</th>
						<th>Sku </th>
            <th>Price</th>
						<th>Description</th>
						<th>Image</th>
						<th>Edit</th>
						<th>Action</th>
					  </tr>
					</thead>
					<tbody>
            <% for (var i = 0; i < responce.length; ++i) { %>
					  <tr>
						<td><%= responce[i].name %></td>
						<td><%= responce[i].sku %></td>
            <td><%= responce[i].price %></td>
						<td><%= responce[i].description %></td>

						<td>
              <% if(responce[i].productGalleryImage) { %>
              <img id="myImg" src="/admin/uploads/product_images/<%= responce[i].productGalleryImage %>" width="107" height="98">
              <% } %>
              </td>
            <td><a href="/admin/product/edit/<%- responce[i].id %>">Edit</td>
            <td><a href="/admin/product/delete/<%= responce[i]._id %>">Delete</td>
					  </tr>
              <% } %>
					 </tbody>
				  </table>



				</div>
				<!-- //tables -->
        <%- paginationHtml %>
			</div>
		
